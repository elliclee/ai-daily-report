{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://elliclee.github.io/ai-daily-report/schemas/daily.schema.json",
  "title": "AI Daily Report - daily.json",
  "type": "object",
  "required": [
    "date",
    "headlines",
    "sections",
    "summary"
  ],
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "headlines": {
      "type": "array",
      "minItems": 3,
      "maxItems": 5,
      "items": {
        "$ref": "#/$defs/item"
      }
    },
    "sections": {
      "type": "object",
      "required": [
        "releases",
        "updates",
        "opensource",
        "benchmarks",
        "business",
        "risks"
      ],
      "properties": {
        "releases": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "updates": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "opensource": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "benchmarks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "business": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        },
        "risks": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/item"
          }
        }
      },
      "additionalProperties": true
    },
    "summary": {
      "type": "object",
      "required": [
        "bullets",
        "url",
        "archiveUrl"
      ],
      "properties": {
        "bullets": {
          "type": "array",
          "minItems": 3,
          "maxItems": 5,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "url": {
          "type": "string",
          "minLength": 1
        },
        "archiveUrl": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "x_highlights": {
      "type": "array",
      "minItems": 0,
      "maxItems": 20,
      "items": {
        "type": "object",
        "required": [
          "author",
          "handle",
          "text",
          "url"
        ],
        "properties": {
          "author": {
            "type": "string",
            "minLength": 1
          },
          "handle": {
            "type": "string",
            "minLength": 1
          },
          "text": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "likes": {
            "type": "integer",
            "minimum": 0
          },
          "reposts": {
            "type": "integer",
            "minimum": 0
          },
          "replies": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": true
      }
    },
    "vendorsHit": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "dedupKeys": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "self_check": {
      "type": "object"
    }
  },
  "$defs": {
    "source": {
      "type": "object",
      "required": [
        "name",
        "url"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true
    },
    "item": {
      "type": "object",
      "required": [
        "title",
        "time",
        "what",
        "why",
        "sources"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "time": {
          "type": "string",
          "minLength": 1
        },
        "what": {
          "type": "string",
          "minLength": 1
        },
        "why": {
          "type": "string",
          "minLength": 1
        },
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/source"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}